@inherits Gloop.Mvc.GloopWebViewPage
@{
    string title = string.Empty;
    string body = string.Empty;

    if (Model.Fields.ContainsKey("title"))
    {
        title = Model.Fields["title"];
    }

    if (Model.Fields.ContainsKey("body"))
    {
        body = Model.Fields["body"];
    }

    ViewBag.Title = title;
}

<div class="jumbotron">
    <h1>@title</h1>
    <p class="lead">@Html.Raw(body)</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
       
    </div>
    <div class="col-md-4">

    </div>
    <div class="col-md-4">

    </div>
</div>